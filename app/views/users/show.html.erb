
<div class="container-fluid">
  <div class="row">
    <nav class="col-md-3">
      <ul class="list-group">
        <li class="list-group-item">
          <%= image_tag @user.avatar.url(:medium), class: "profilePhoto" if @user.avatar? %>
          <h1 align="center">Welcome to <%= @user.first_name %>'s page
          </h1>
        </li>
        <li class="list-group-item">

        </li>
        <li class="list-group-item">
          <span class="badge">14</span>
          Cras justo odio
        </li>
        <li class="list-group-item">
          Interests:
          <% if @user.interests.any? %>
          <%= render @user.interests %>
          <% end %>
        </li>
      </ul>
    </nav>


    <div class="col-md-9">
      <h2 align=""><%= @user.name %>'s articles</h2>
        <div align="">
          <% if user_signed_in? and current_user.admin? %>
          <%= link_to 'Edit this user',  edit_user_registration_path(@user), class: "btn btn-xs btn-primary" %>
          <% end %>
        </div>

        <%= render 'listings/listing', obj: @user.listings %>
    </div>
  </div>
</div>
