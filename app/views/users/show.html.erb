<h1 align="center">Welcome to <%= @user.first_name %>'s page </h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @user, size: 80 %>
  </div>
</div>

<h4 align="center"><%= @user.name %>'s articles</h4>
<div align="center">
  <% if logged_in? and current_user.admin? %>
  <%= link_to 'Edit this user', edit_user_path(@user), class: "btn btn-xs btn-primary" %>
  <% end %>
</div>
<%= render 'listings/listing', obj: @user.listings %>
