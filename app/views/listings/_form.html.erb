<%= render 'shared/errors', obj: @listing %>
<div class="container-fluid">
  <div class="row">
  <div class="col-xs-12">
    <%= form_for(@listing, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Type, duration", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :Url  %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 1, class: "form-control", placeholder: "Listing's url (Airbnb or other)", autofocus: true %>
        </div>
      </div>


      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 3, class: "form-control", placeholder: "Desctiption of article", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
          <div class="control-label col-sm-2">
              <%= f.label :pets %>
          </div>
        <div class="col-sm-10">
          <div class="radio">
              <label>
                <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked>
                All pets are welcome.
            </div>
            <div class="radio">
              <label>
                <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
                Small pets are welcome.
              </label>
            </div>
            <div class="radio disabled">
              <label>
                <input type="radio" name="optionsRadios" id="optionsRadios3" value="option3" disabled>
                No, pets are not allowed.
              </label>
            </div>
        </div>
      </div>


      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg'%>
        </div>
      </div>
    <% end %>


    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to 'Cancel request and return to listings', listings_path %> ]
    </div>
  </div>
</div>
</div>
