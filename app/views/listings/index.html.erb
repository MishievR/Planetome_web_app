<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Planetome | Listings</title>
  </head>
<h1 align="center">List of all listings</h1>

<% @listings.each do |listing| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="listing-title">
          <%= link_to listing.title, listing_path(listing) %>
        </div>
        <div class="listing-body">
          <%= truncate(listing.description, length: 100) %>
          <div class="listing-meta-details">
          <small> Created by: <%= listing.user.username if listing.user %>
                              <%= time_ago_in_words(listing.created_at) %> ago,
                              last updated: <%= time_ago_in_words(listing.updated_at) %> </small>
          </div>
        </div>
          <div class="listing-actions">
            <%= link_to 'Edit this listing', edit_listing_path(listing), class: "btn btn-xs btn-primary" %>
            <%= link_to 'Delete this listing', listing_path(listing), method: :delete,
                                                data: { confirm: "Are you sure you want to delete this listing?"},
                                                class: "btn btn-xs btn-danger" %>
            </div>
          </div>
      </div>
  </div>
          <% end %>

